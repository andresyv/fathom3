{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      // "@/*": ["./src/*"],
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "./.eslintrc.cjs", "src/server.ts", "prisma/seed.ts"],
  "exclude": ["node_modules"]
}
